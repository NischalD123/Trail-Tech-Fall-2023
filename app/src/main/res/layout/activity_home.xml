<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/bg_home_screen">
    <!-- android:fitsSystemWindows="true"
     tools:openDrawer="start"
     >-->

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <!--    Got image from: https://clipground.com/mountain-scenes-clipart.html-->
        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/mountainbgimage" />

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/noBadgeAwarded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Badge Awarded for current week"
            android:textStyle="bold"
            android:textColor="@color/btn_green"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlAwarded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCurrentWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week number:1, "
                android:textStyle="bold"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/ivBadge"
                android:layout_toEndOf="@+id/tvCurrentWeek"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/badge" />

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/survey_time_tvs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@id/button_Survey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome ABC!"
                android:textAllCaps="true"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/last_survey_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAST SURVEY: NEVER"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                />
            <!--        app:layout_constraintTop_toBottomOf="@id/last_survey_tv"-->
            <!--        app:layout_constraintLeft_toLeftOf="parent"-->
            <!--        app:layout_constraintRight_toRightOf="parent"-->
            <!--        app:layout_constraintBottom_toTopOf="@id/button_Survey"-->
        </LinearLayout>

         <Button
             android:id="@+id/button_Survey"
             android:layout_width="248dp"
             android:layout_height="119dp"
             android:layout_marginBottom="100dp"
             android:background="@drawable/green_btn"
             android:text="@string/survey"
             android:textAllCaps="false"
             android:textColor="#FFFFFF"
             android:textSize="25sp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintHorizontal_bias="0.496"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent" />


     </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ViewPager element with a unique ID -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- DO NOT MOVE FROM BOTTOM -->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:menu="@menu/menu_home" />

    <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
